 <div class="side-bar-info">
            <div class="restroom-name">
                {{bathroom.title}}
                </div>
                {{!-- check image url --}}
            <img src={{bathroom.image_url}} alt="Restroom pic">
            <div class="address-bar">
                {{bathroom.address}}
            </div>
                <div class="pictogram">
                    {{bathroom.gendered}}
                    {{bathroom.unisex}}
                    {{bathroom.disabled_access}}
                    {{bathroom.key}}
                    {{bathroom.changing_tables}}
                    {{bathroom.menstruation_products}}
                </div>
            <div class="rating">
                <p>Rating:</p> 
                <span class="score">
                <!-- function returning average score should go in here -->
                </span>
                / 5.0
            </div>
            <div class="review-section">
                <p>Reviews:</p>
                <ol class="review-list">
                {{#each bathroom.reviews}}
                <div>
                    {{> review-list review}}
                </div>
                {{/each}}
                </ol>
            </div>
             <div class="add-review-section">
                <p>Add a review:</p>
                <form>
                <div>
                    <label for="review-rating">Rating</label>
                    <input type="number" id="rating" name="review-rating" min="1" max="5">
                </div>
                 <div>
                    <label for="review-text">Comment</label>
                    <input type="text" id="review-text" name="review-text" />
                </div>
                 <button type="submit" class="btn">Add</button>
                </form>
            </div>
        </div>

   <script src='/assets/map.js'></script>